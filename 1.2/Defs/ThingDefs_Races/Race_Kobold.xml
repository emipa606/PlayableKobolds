<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ============================ Kobold Base ========================== -->
  <AlienRace.ThingDef_AlienRace ParentName="BasePawn" Name="Alien_Kobold">
    <defName>Alien_Kobold</defName>
    <label>kobold</label>
    <description>A kobold which has risen above it's kin to become a productive member of society. Mostly.</description>
    <alienRace>
      <generalSettings>
        <immuneToAge>false</immuneToAge>
        <forcedRaceTraitEntries>
          <li>
            <defName>Gay</defName>
            <chance>20</chance>
          </li>
        </forcedRaceTraitEntries>
        <alienPartGenerator>
          <aliencrowntypes>
            <li>KoboldHead</li>
          </aliencrowntypes>
          <alienbodytypes>
            <li>Hulk</li>
            <li>Fat</li>
            <li>Thin</li>
            <li>Female</li>
            <li>Male</li>
          </alienbodytypes>
          <colorChannels>
            <li>
              <name>skin</name>
              <first Class="ColorGenerator_Options">
                <options>
                  <li>
                    <weight>100</weight>
                    <only>RGBA(0.8,0,0.1,1)</only>
                  </li>
                </options>
              </first>
            </li>
          </colorChannels>
          <useGenderedHeads>false</useGenderedHeads>
        </alienPartGenerator>
        <chemicalSettings>
        </chemicalSettings>
        <humanRecipeImport>true</humanRecipeImport>
      </generalSettings>
      <graphicPaths>
        <li>
          <head>Kobold/Head/</head>
          <body>Kobold/Body/</body>
        </li>
      </graphicPaths>
      <hairSettings>
        <hasHair>false</hasHair>
      </hairSettings>
      <relationSettings>
        <relationChanceModifierChild>1</relationChanceModifierChild>
        <relationChanceModifierExLover>1</relationChanceModifierExLover>
        <relationChanceModifierExSpouse>0</relationChanceModifierExSpouse>
        <relationChanceModifierFiance>0</relationChanceModifierFiance>
        <relationChanceModifierLover>1</relationChanceModifierLover>
        <relationChanceModifierParent>1</relationChanceModifierParent>
        <relationChanceModifierSibling>1</relationChanceModifierSibling>
        <relationChanceModifierSpouse>0</relationChanceModifierSpouse>
      </relationSettings>
      <thoughtSettings>
        <cannotReceiveThoughts>
          <li>AteLavishMeal</li>
          <li>AteFineMeal</li>
          <li>AteAwfulMeal</li>
          <li>AteRawFood</li>
          <li>AteKibble</li>
          <li>AteCorpse</li>
          <li>AteHumanlikeMeatDirect</li>
          <li>AteHumanlikeMeatAsIngredient</li>
          <li>AteInsectMeatDirect</li>
          <li>AteInsectMeatAsIngredient</li>
          <li>ButcheredHumanlikeCorpse</li>
          <li>KnowButcheredHumanlikeCorpse</li>
          <li>AteRottenFood</li>
          <li>AteWithoutTable</li>
          <li>NeedOutdoors</li>
          <li>EnvironmentDark</li>
          <li>HumanLeatherApparelSad</li>
        </cannotReceiveThoughts>
      </thoughtSettings>
    </alienRace>
    <statBases>
      <Mass>60</Mass>
      <MarketValue>400</MarketValue>
      <MoveSpeed>4.62</MoveSpeed>
      <Flammability>1.0</Flammability>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
      <ComfyTemperatureMax>40</ComfyTemperatureMax>
      <LeatherAmount>25</LeatherAmount>
    </statBases>
    <race>
      <thinkTreeMain>Humanlike</thinkTreeMain>
      <baseHungerRate>1.15</baseHungerRate>
      <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
      <intelligence>Humanlike</intelligence>
      <makesFootprints>true</makesFootprints>
      <lifeExpectancy>80</lifeExpectancy>
      <meatColor>(170, 0, 25)</meatColor>
      <leatherDef>Leather_PlayableKobold</leatherDef>
      <nameCategory>HumanStandard</nameCategory>
      <body>Human</body>
      <baseBodySize>1</baseBodySize>
      <baseHealthScale>1</baseHealthScale>
      <foodType>OmnivoreHuman</foodType>
      <gestationPeriodDays>45</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(1.01, 0.02)</li>
          <li>(3.5, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeStageAges>
        <li>
          <def>BabyStage</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>ChildStage</def>
          <minAge>2</minAge>
        </li>
        <li>
          <def>AdultStage</def>
          <minAge>15</minAge>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
      <specialShadowData>
        <volume>(0.3, 0.8, 0.4)</volume>
        <offset>(0,0,-0.3)</offset>
      </specialShadowData>
      <ageGenerationCurve>
        <points>
          <li>(1,0)</li>
          <li>(10,10)</li>
          <li>(20,60)</li>
          <li>(40,50)</li>
          <li>(60,30)</li>
          <li>(70,10)</li>
          <li>(81,0)</li>
        </points>
      </ageGenerationCurve>
      <hediffGiverSets>
        <li>OrganicStandard</li>
      </hediffGiverSets>
    </race>
